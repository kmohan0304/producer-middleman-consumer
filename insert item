void insert_item(int buffer[5],int item)
{
//* When the buffer is not full add the item and increment the in *//
if(in<BUFFER_SIZE)
{
buffer[in]=item;
printf("Insert_item inserted item %d at position %d\n",item,in);//* prints the inserted item *//
in++;
}
//* After insertion ,this prints the contents of the buffer *//
for(int i=0;i<BUFFER_SIZE;i++)
{
printf(“Buffer contents are %d \t”,buffer[i]);
}
// * prints the value of in and out and the name of this queue *//
printf(“in is %d \t”,in);
printf(“out is %d \t”,out);
printf(“queue is %d \t” ,buffer);
return 0;
}
